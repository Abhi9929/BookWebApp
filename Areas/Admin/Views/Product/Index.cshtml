@model List<Product>

@{
	ViewData["Title"] = "Products";
}

<div class="card shadow border-0 my-4">
	<div class="card-header bg-secondary bg-gradient ml-0 py-4">
		<div class="row">
			<div class="col-12 text-center">
				<h2 class="py-2 text-white">Product List</h2>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-12 text-end p-4" style="padding-right: 2rem;">
			<a asp-controller="Product" asp-action="Upsert" class="btn btn-primary">Create New Product</a>
		</div>
	</div>
	<div class="card-body p-4" style=" padding-top: 0px !important;">
		<div class="row">
			<div class="col-md-12">
				<table class="table table-bordered w-full table-striped">
					<thead>
						<tr>
							<th>
								Title
							</th>
							<th>
								Author
							</th>
							<th>
								Category
							</th>
							<th>
								ISBN
							</th>
							<th>
								Price
							</th>
							<th>

							</th>
							<th>

							</th>
						</tr>
					</thead>
					<tbody>
						@foreach (var obj in Model)
						{
							<tr>
								<td>
									@obj.Title
								</td>
								<td>
									@obj.Author
								</td>
								<td>
								</td>
								<td style="word-wrap: normal;">
									@obj.ISBN
								</td>
								<td>
									@obj.ListPrice
								</td>
								<td>
									@obj.Category.Name
								</td>

								<td class="text-left">
									<div class="w-75 btn-group" role="group">
										<a asp-controller="Product" asp-action="Upsert" asp-route-id="@obj.Id" class="btn btn-primary mx-2">Edit</a>
									</div>
								</td>
								<td class="text-left">
									<div class="w-75 btn-group" role="group">
										<a asp-controller="Product" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">Delete</a>
									</div>
								</td>
							</tr>
						}
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>
